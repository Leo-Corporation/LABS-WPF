<Window x:Class="LABS_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LABS_WPF"
        mc:Ignorable="d"
        Title="LABS WPF" Height="382" Width="673" WindowStartupLocation="CenterScreen" Icon="Logo.png" WindowStyle="None">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="25" VerticalAlignment="Top" MouseMove="StackPanel_MouseMove">
            <Image Source="Logo.png" Height="20"></Image>
            <TextBlock Margin="5 2" FontWeight="Bold" FontSize="14">LABS WPF</TextBlock>
        </StackPanel>
        <Separator Margin="0,24,0,349"/>
        <StackPanel Margin="0 15 0 0" Orientation="Horizontal" Height="50" VerticalAlignment="Top">
            <Button Style="{StaticResource LABSButton}" Content="Paramètres" Width="78"></Button>
            <Button Style="{StaticResource LABSButton}" Content="A propos" Width="63" Margin="7,14"></Button>
        </StackPanel>
    </Grid>
</Window>
