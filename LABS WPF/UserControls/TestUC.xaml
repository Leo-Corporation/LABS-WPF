<UserControl x:Class="LABS_WPF.UserControls.TestUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LABS_WPF.UserControls"
             xmlns:xf="clr-namespace:XamlFlair;assembly=XamlFlair.WPF"
             mc:Ignorable="d" Height="84.312" Width="109.255" MouseLeftButtonDown="UserControl_MouseLeftButtonDown">
    <Border Margin="3" BorderBrush="Black" BorderThickness="0" CornerRadius="10">
        <Border.Background>
            <LinearGradientBrush>
                <GradientStop Color="#FF4600FF"/>
                <GradientStop Color="#FF8000FF" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <TextBlock FontWeight="Bold" Foreground="White" x:Name="TextBlock" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <CheckBox x:Name="CheckBox1" x:FieldModifier="public" Margin="5 5 0 0" Background="Transparent" BorderBrush="White" BorderThickness="1" Height="20" Width="20" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{DynamicResource CheckBoxStyle1}" Visibility="Hidden"/>
        </Grid>
    </Border>
</UserControl>
