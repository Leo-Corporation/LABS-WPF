<UserControl x:Class="LABS_WPF.UserControls.AddUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LABS_WPF.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="84.312" Width="109.255">
    <Border Margin="3" BorderBrush="Black" BorderThickness="0" CornerRadius="10">
        <Border.Background>
            <LinearGradientBrush>
                <GradientStop Color="#FF4600FF"/>
                <GradientStop Color="#FF8000FF" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Button Click="Button_Click" BorderThickness="0" Background="{x:Null}">
                <Image Source="add.png" Width="60"/>
            </Button>
        </Grid>
    </Border>
</UserControl>
