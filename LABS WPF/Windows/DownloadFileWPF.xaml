<Window x:Class="LABS_WPF.Windows.DownloadFileWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LABS_WPF.Windows"
        mc:Ignorable="d"
        Title="DownloadFileWPF" Height="400" Width="600" WindowStartupLocation="CenterScreen" Icon="/LABS WPF;component/Logo.png">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock FontWeight="Bold" TextAlignment="Center">Download</TextBlock>
            <Button Name="StartBtn" Click="StartBtn_Click" FontSize="15" Padding="5" Style="{StaticResource LABSButton}" Content="Start"/>
            <ProgressBar Name="PgrBar" Height="25" Width="200">
                <ProgressBar.Foreground>
                    <LinearGradientBrush>
                        <GradientStop Color="#FF4600FF"/>
                        <GradientStop Color="#FF8000FF" Offset="1"/>
                    </LinearGradientBrush>
                </ProgressBar.Foreground>
            </ProgressBar>
        </StackPanel>
    </Grid>
</Window>
